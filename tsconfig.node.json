{
  "extends": "./tsconfig.shared.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node", "electron"],
    "lib": ["ES2023"],
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/main/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": [
    "electron.vite.config.ts",
    "src/main/**/*.ts",
    "src/shared/**/*.ts",
    "src/preload/**/*.ts",
    "Tests/unit/**/*.ts"
  ]
}
