{
  "name": "echo-electron",
  "version": "0.1.0",
  "private": true,
  "description": "Echo desktop assistant rebuilt with Electron",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "env -u ELECTRON_RUN_AS_NODE electron-vite dev",
    "build": "electron-vite build",
    "dist": "pnpm run build && electron-builder",
    "dist:mac": "pnpm run build && electron-builder --mac dmg zip",
    "preview": "electron-vite preview",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "lint-staged": "lint-staged",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "electron-store": "11.0.2",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^5.0.1",
    "@storybook/addon-a11y": "^10.2.8",
    "@storybook/addon-docs": "^10.2.8",
    "@storybook/addon-onboarding": "^10.2.8",
    "@storybook/addon-vitest": "^10.2.8",
    "@storybook/react-vite": "^10.2.8",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "4.0.18",
    "electron": "^40.4.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "postcss": "^8.5.6",
    "storybook": "^10.2.8",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,jsx,ts,tsx}": [
      "oxlint --fix",
      "oxfmt"
    ],
    "*.{json,md,css,html}": "oxfmt"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "app-builder-bin",
      "electron",
      "electron-builder",
      "electron-winstaller",
      "esbuild"
    ]
  },
  "build": {
    "appId": "com.echo.desktop",
    "productName": "Echo",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    }
  }
}
